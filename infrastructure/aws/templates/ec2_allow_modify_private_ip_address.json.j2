{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "VisualEditor0",
            "Effect": "Allow",
            "Action": [
                "ec2:UnassignPrivateIpAddresses",
                "ec2:AssignPrivateIpAddresses"
            ],
            "Resource": [
{% for interface in controlplane_network_interfaces %}
                "arn:aws:ec2:{{ aws.region }}:{{ interface.owner_id }}:network-interface/{{ interface.network_interface_id }}"{{ ", " if not loop.last else "" }}
{% endfor %}
            ]
        },
        {
            "Sid": "VisualEditor1",
            "Effect": "Allow",
            "Action": [
                "ec2:DescribeInstances",
                "ec2:DescribeNetworkInterfaces"
            ],
            "Resource": "*"
        }
    ]
}